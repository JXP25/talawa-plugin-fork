{
  "name": "Razorpay Payment Gateway",
  "pluginId": "razorpay",
  "version": "1.0.0",
  "description": "A payment gateway plugin that integrates Razorpay for donations and payments within organizations. Provides configuration, transaction management, and user payment interfaces.",
  "author": "Palisadoes Foundation",
  "main": "index.tsx",
  "icon": "/src/plugin/available/razorpay/assets/razorpay.png",
  "extensionPoints": {
    "G1": [
      {
        "injector": "RazorpayInjector",
        "description": "Razorpay payment provider transactions for users"
      }
    ],
    "G2": [
      {
        "injector": "RazorpayInjector",
        "description": "Razorpay payment provider transactions for organization admins"
      }
    ],
    "RA1": [
      {
        "path": "/admin/razorpay/configuration",
        "component": "RazorpayConfiguration"
      }
    ],
    "RU1": [
      {
        "path": "/user/razorpay/:orgId/donate",
        "component": "DonationForm"
      }
    ],
    "DA1": [
      {
        "label": "Razorpay Configuration",
        "icon": "/src/plugin/available/razorpay/assets/razorpay.png",
        "path": "/admin/razorpay/configuration",
        "order": 1
      }
    ],
    "DU1": [
      {
        "label": "Make Donation",
        "icon": "/src/plugin/available/razorpay/assets/razorpay.png",
        "path": "/user/razorpay/:orgId/donate",
        "order": 1
      }
    ]
  }
}
